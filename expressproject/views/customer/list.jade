extends ../layout/base 
block content 
	section.content-header 
		img(src='https://telemedicine.rspondokindah.co.id/drive-thru/assets/img/rspi-logo/Logo_RSPI_Group.png',alt='User Image', style='width: 25%; display: block; margin-left: auto; margin-right: auto;', class='img-align-center')
	section.content
		.box
			.box-header.with-border
				h3.box-title
					| Daftar Pasien
				.box-tools.pull-right
					button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
						i.fa.fa-minus
			.box-body
				- if(messages.msg_info)
					.alert.alert-success.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-check
							| Success!
						| !{messages.msg_info}
				- if(messages.msg_error)
					.alert.alert-danger.alert-dismissable
						button.close(type='button', data-dismiss='alert', aria-hidden='true')
							| ×
						h4
							i.icon.fa.fa-ban
							| Alert!
						| !{messages.msg_error}
				a(href='customers/add').pull-left.btn.btn-success
					i.fa.fa-plus 
					|  Tambah Pasien
				.data-table
					table.table.table-bordered
						tr
							th
								| ID 
							th
								| Nama
							th
								| Alamat
							th
								| Jenis Penyakit
							th
								| No Telp
							th
								| Aksi
							if messages.msg_error
								| !{messages.msg_error}
							else
								for row, index in data 
									tr
										td #{index+1}
										td #{row.name}
										td #{row.address}
										td #{row.email}
										td #{row.phone}
										td
											div(style='display:inline-block')
												a(href='/customers/edit/#{row.id}').btn.btn-sm.btn-warning
														i.fa.fa-edit
											| 
											div(style='display:inline-block')
												form(method='post', action='/customers/delete/#{row.id}')
													input(type="hidden",name="_method", value="DELETE")
													button.btn.btn-sm.btn-danger(type='submit')
														i.fa.fa-remove